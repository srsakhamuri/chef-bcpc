listen glance-api
  bind <%= @vip %>:9292 ssl crt /etc/haproxy/haproxy.pem
  balance source
  option tcpka
  option httpchk
  option httplog
  option forwardfor
<% @headnodes.each do |n| -%>
  server <%= n['hostname'] %> <%= n['service_ip'] %>:9292 check inter 5s rise 1 fall 1
<% end -%>
