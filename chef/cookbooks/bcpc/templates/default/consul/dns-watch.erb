remove_cloud_ip() {
    /sbin/ip address delete \
      <%= node['bcpc']['cloud']['vip'] %>/32 dev lo
}

add_cloud_ip() {
    /sbin/ip address add \
      <%= node['bcpc']['cloud']['vip'] %>/32 dev lo
}

self_ip="<%= node['service_ip'] %>"
leader=$(curl -qs http://localhost:8500/v1/status/leader | jq -r '.')
if [ "${self_ip}" != "${leader%:8300}" ]; then
    disable_bgp
    exit 0
fi

status="`cat`"
self="<%= node['hostname'] %>"
echo "$status" > /tmp/dns-handler.log
echo "$status" | jq ".[] |
  select((.Node==\"$self\") and (.CheckID==\"service:dns\")) | .Status" |
  grep -q passing
if [ $? -eq 0 ]; then
    add_cloud_ip
else
    remove_cloud_ip
fi
exit 0
