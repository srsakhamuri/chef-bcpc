[DEFAULT]
core_plugin = calico
state_path = /var/lib/neutron
dns_domain = <%= node['bcpc']['cloud']['domain'] %>

[calico]
etcd_host = 127.0.0.1
etcd_port = 2379
etcd_ca_cert_file = <%= node['bcpc']['etcd']['ca']['crt']['filepath'] %>
etcd_cert_file = <%= node['bcpc']['etcd']['client-ro']['crt']['filepath'] %>
etcd_key_file = <%= node['bcpc']['etcd']['client-ro']['key']['filepath'] %>

[oslo_concurrency]
lock_path = $state_path/lock
